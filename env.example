# CleanBox 환경변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# Flask 설정
FLASK_APP=run.py
FLASK_ENV=development
FLASK_PORT=5001

# 데이터베이스 설정 (PostgreSQL)
POSTGRES_DB=cleanbox
POSTGRES_USER=cleanbox_user
POSTGRES_PASSWORD=cleanbox_password
CLEANBOX_DATABASE_URI=postgresql://cleanbox_user:cleanbox_password@postgres:5432/cleanbox

# 보안 키 설정 (실제 값으로 변경하세요)
CLEANBOX_SECRET_KEY=your-secret-key-here
CLEANBOX_ENCRYPTION_KEY=ps3UBGLk54b5JTRvUDemiIVX0c84WTH5EE0UbgSuhAo=

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5001/auth/callback

# AI 설정 (Ollama 사용)
CLEANBOX_USE_OLLAMA=true
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# OAuth 개발 환경 설정
OAUTHLIB_INSECURE_TRANSPORT=1
