# syntax=docker/dockerfile:1
FROM python:3.11-slim

# 시스템 패키지 업데이트
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    procps \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Chrome 및 ChromeDriver 설치
RUN apt-get update && apt-get install -y \
    chromium \
    chromium-driver \
    && rm -rf /var/lib/apt/lists/*

# 작업 디렉토리 설정
WORKDIR /app

# Python 의존성 복사 및 설치 (selenium 포함)
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip

# selenium을 포함한 패키지들 설치
RUN pip install --no-cache-dir Flask==2.3.3 Flask-Login==0.6.3 Flask-SQLAlchemy==3.1.1 \
    google-auth==2.23.4 google-auth-oauthlib==1.1.0 google-auth-httplib2==0.1.1 \
    google-api-python-client==2.108.0 google-cloud-pubsub==2.18.4 google-cloud-storage==2.10.0 \
    google-cloud-resource-manager==1.14.2 requests==2.31.0 python-dotenv==1.0.0 \
    gunicorn==21.2.0 Flask-APScheduler==1.13.0 cryptography==41.0.7 openai==1.97.0 \
    beautifulsoup4==4.12.2 selenium==4.15.2 webdriver-manager==4.0.1 pytest==7.4.3 \
    pytest-flask==1.3.0 pytest-cov==4.1.0 psycopg[binary]==3.2.9

# Playwright를 위한 시스템 의존성 설치
RUN apt-get update && apt-get install -y \
    libxss1 libasound2 libatk-bridge2.0-0 libgtk-3-0 libdrm2 libxkbcommon0 \
    libxcomposite1 libxdamage1 libxrandr2 libgbm1 libpango-1.0-0 libcairo2 \
    libasound2 libatspi2.0-0 libx11-xcb1 libxcb-dri3-0 libxcursor1 libxext6 \
    libxfixes3 libxi6 libxrender1 libxtst6 fonts-liberation libappindicator1 \
    libnss3 lsb-release xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Playwright 설치
RUN pip install --no-cache-dir playwright==1.39.0

# Playwright 브라우저 설치
RUN playwright install --with-deps chromium

# Chrome 환경 변수 설정
ENV CHROME_BIN=/usr/bin/chromium
ENV CHROMEDRIVER_PATH=/usr/bin/chromedriver

# 애플리케이션 코드 복사
COPY . .

# 포트 노출
EXPOSE 8000

# 애플리케이션 실행
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "1", "app:app"] 